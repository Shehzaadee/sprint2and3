@model IEnumerable<GateBoys.Models.wishlist>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var email = User.Identity.GetUserName();
}

<div class="checkout">
    <div class="container">
        <div class="table-responsive checkout-right animated wow slideInUp" data-wow-delay=".5s">
            <table class="timetable_sub">
                <thead>
                    <tr>
                        <th>Remove</th>
                        <th>Product</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Add To Cart</th>
                    </tr>
                </thead>

                @foreach (var item in Model.Where(a => a.usermail == email))
                {

                    <tr class="rem1">
                        @*remove btn*@
                        <td class="invert-closeb">
                            <div class="rem">
                                <a href="/wishlists/remove/@item.id">
                                    <div class="close1"></div>
                                </a>
                            </div>
                        </td>
                        @*Image*@
                        <td class="invert-image">
                            <center>
                                <a href="/main/details/@item.productId">
                                    <img style="height:100px;width:100px;" src="/InventoryProducts/GetPic/@Html.DisplayFor(modelItem=>item.productId)"
                                         alt="@Html.DisplayFor(modelItem=>item.productName)" class="img-responsive" />
                                </a>
                            </center>
                        </td>
                        @*Product name*@
                        <td class="invert">@item.productName </td>
                        @*Product price*@
                        <td class="invert">@item.price</td>
                        @*Sub tot price*@
                        <td class="invert"><span class="glyphicon glyphicon-shopping-cart"></span></td>
                    </tr>
                }


            </table>
        </div>
        <table style="width:100%">
            <tr>
                <td style="width:80%">
                    <div class="checkout-left">
                        <div class="checkout-right-basket animated wow slideInRight" data-wow-delay=".5s">
                            <a href="/main"><span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>Back To Shopping</a>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="checkout-left">
                        <div class="checkout-right-basket animated wow slideInRight" data-wow-delay=".5s">
                            <a href="/wishlists/clearMyWish">Clear Wishlist &nbsp; &nbsp;<span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                        </div>
                    </div>
                </td>
            </tr>
        </table>

    </div>
</div>

